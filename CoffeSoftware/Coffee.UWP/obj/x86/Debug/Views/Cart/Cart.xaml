                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <FontIcon Glyph="&#xE74D;"/>
                <TextBlock Grid.Row="1" Text="Clear" FontSize="12" TextWrapping="WrapWholeWords" VerticalAlignment="Bottom"/>
